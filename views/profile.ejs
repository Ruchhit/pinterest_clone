<% include ./partials/header.ejs%>
    <div class="bg-zinc-700 w-full min-h-screen p-1">
        <form hidden id="uploadForm" action="/fileUpload" method="post" enctype="multipart/form-data">
            <input type="file" name="image"/>
        </form>
         <div class="flex justify-center items-center">
            <div class="bg-zinc-200 w-1/4 mt-10 flex justify-center items-center flex-col rounded-lg">
                
                 <div class="relative">
                    <span id="uploadIcon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full bg-red-600 flex items-center justify-center cursor-pointer">
                        <i class="ri-pencil-line text-white"></i>
                    </span>
                    <div class="w-36 h-36 bg-black rounded-full mt-4">
                        <img alt="k" src="/images/uploads/<%=user.profileImage %>" class="w-full h-full object-cover overflow-hidden rounded-full"/>
                    </div>
                 </div>
                <h1 class="text-lg font-semibold">Ruchit</h1>
                <h3 class="text-sm font-semibold">@username</h3>
                <button class="p-2 m-2 w-1/3 rounded-lg bg-slate-600 text-white font-semibold">Edit</button>
                <a href="/add" class="p-2 m-2 w-3/4 rounded-lg bg-red-600 text-white font-semibold">Add a Post..</a>
            </div>
         </div>
          <% if(user.posts.length > 0){%>
            <div class="w-full h-96 mt-4">
                <div class="w-60 h-60 bg-zinc-300 object-cover overflow-hidden flex flex-col mx-2 rounded-xl">
                    <div class="w-full h-full object-cover overflow-hidden rounded-tl-xl rounded-tr-xl">
                        <img src="/images/uploads/<%= user?.posts[0]?.postImage %>" alt="k"/>
                    </div>
                    <h2  class="pl-2 pb-2 text-lg font-semibold px-2">All_Pins - <%= user.posts.length%></h2>
                    <h3 class="pl-2 pb-2 text-sm px-2">created by -<%= user.username%></h3>
    
                </div>
            </div>
          <%}%>
          
    </div>
    <script>
        document.querySelector("#uploadIcon").addEventListener("click", function () {
            document.querySelector("#uploadForm input").click();
        });
    
        document.querySelector("#uploadForm input").addEventListener("change", function () {
            document.querySelector("#uploadForm").submit();
        });
    </script>
    
<% include ./partials/footer.ejs%>
